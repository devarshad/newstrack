<script>
    $(document).ready(function (d, e) {
        ko.cleanNode($('div.container-section')[0]);
        ko.applyBindings({ koStoryByGroup: vmStoryByGroup }, $('div.container-section')[0]);
        vmStoryByGroup.init();
    })
</script>
