@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        @RenderBody()
    </div>
    <div class="col-lg-3">
    </div>
</div>
@section  alertmessage{
    @Scripts.Render("~/bundles/alertmessage")
    <script>
        var vmMessage = new VM_Message();
        ko.applyBindings({ koMesssages: vmMessage }, $('div.top-messages.container')[0]);
        $(document).ready(function () {
            vmMessage.init();
        });
    </script>
}